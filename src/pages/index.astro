---
import Noscroll from "../layouts/Noscroll.astro";
import LinkButton from "../components/LinkButton.astro";
import Counts from "../components/Counts.svelte";
---

<Noscroll title="pugBot.tf">
    <div class="grid" id="grid">
        <div id="bg" class="decor"></div>
        <div class="intro" id="info">
            <div class="title">
                <h3 id="title">
                    <span class="text-gradient">pugBot</span> - a pug system for tf2
                </h3>
            </div>
            <div class="stats">
                <Counts client:load />
            </div>
            <div class="description">
                <h2>
                    easily organize pick up games for any size of community, with features like:
                    <ul>
                        <li>one command server setup</li>
                        <li>balanced team generation with ELO</li>
                        <li>RGL account linking</li>
                        <li>and much more</li>
                    </ul>
                </h2>
            </div>
            <div class="buttons" id="buttons">
                <div class="buffer">
                    <LinkButton title="Register" href="/register" body="Register to link your accounts!" />
                    <LinkButton title="Profile" href="/profile" body="View your pug stats and rankings!" />
                    <LinkButton title="Invite" href="/invite" body="Invite the bot to your own servers!" />
                    <LinkButton title="Docs" href="/docs" body="Documentation on how to setup features of the bot!" />
                </div>
            </div>
        </div>
    </div>
</Noscroll>

<style>
    .grid {
        display: grid;
        grid-template-columns: 45% 55%;
        height: 100%;
        width: 100%;
        overflow: hidden;
    }
    .decor {
        width: 150%;
        height: calc(100% + 28px);
        z-index: 0;
        transform: translate(-16px, -16px);
    }

    .intro {
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        background: #ffffff;
        color: #000000;
        clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 7.5% 100%);
        z-index: 1;
        font-family:
            Inter,
            -apple-system,
            BlinkMacSystemFont,
            Segoe UI,
            Roboto,
            Oxygen-Sans,
            Ubuntu,
            Cantarell,
            Helvetica Neue,
            sans-serif,
            Apple Color Emoji,
            Segoe UI Emoji,
            Segoe UI Symbol;
        text-align: right;
        padding: 0px 20px 0px 0px;
        list-style-position: inside;
        overflow-y: auto;
    }

    .title {
        flex: 1 1 auto;
        padding: 20px 20px 0px 20px;
        min-height: min-content;
    }

    ul {
        padding-left: 0px;
    }

    .title h3 {
        font-size: 3.25vw;
        width: 100%;
        margin: 0;
        display: inline-block;
        white-space: nowrap;
    }

    .stats {
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        flex: 1 1 auto;
        font-size: 1.5vw;
        min-height: min-content;
    }

    h2 {
        padding: 10px 20px 0px 20px;
    }

    .description {
        display: flex;
        flex-direction: column;
        justify-content: space-around;
        flex: 2 0 auto;
        min-height: min-content;
    }

    .buttons {
        flex: 3 1 auto;
        padding-left: 100px;
        min-height: 0;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .text-gradient {
        color: var(--accent);
        -webkit-text-stroke: 1px #000000;
    }

    .buffer {
        display: grid;
        grid-template-columns: repeat(2, minmax(140px, 1fr));
        gap: 2rem;
        margin-bottom: 10px;
    }
</style>
<script>
    var bg = document.getElementById("bg");

    var bgNum = Math.floor(Math.random() * 5) + 1;
    if (bg != null) {
        bg!.style.background = `url(\'./maps/${bgNum}.jpeg\') center center`;
    }

    window.addEventListener("mousemove", function (e) {
        let x = e.clientX / window.innerWidth;
        let y = e.clientY / window.innerHeight;

        bg!.style.transform = "translate(-" + x * 28 + "px, -" + y * 28 + "px)";
    });

    var grid = document.getElementById("grid");
    var info = document.getElementById("info");
    var buttons = document.getElementById("buttons");
    var title = document.getElementById("title");

    if (window.innerWidth < 1000) {
        grid!.style.gridTemplateColumns = "0% 100%";
        info!.style.textAlign = "center";
        info!.style.clipPath = "none";
        buttons!.style.paddingLeft = "0px";
        info!.style.padding = "0px 20px 0px 20px";
        title!.style.fontSize = "5vw";
    }

    window.addEventListener("resize", function (e) {
        if (window.innerWidth < 1000) {
            grid!.style.gridTemplateColumns = "0% 100%";
            info!.style.textAlign = "center";
            info!.style.padding = "0px 20px 0px 20px";
            buttons!.style.paddingLeft = "0px";
            info!.style.clipPath = "none";
            title!.style.fontSize = "5vw";
        } else {
            grid!.style.gridTemplateColumns = "45% 55%";
            info!.style.textAlign = "right";
            info!.style.padding = "0px 20px 0px 20px";
            buttons!.style.paddingLeft = "75px";
            info!.style.clipPath = "polygon(0% 0%, 100% 0%, 100% 100%, 7.5% 100%)";
            title!.style.fontSize = "3.25vw";
        }
    });
</script>
